@page
@model TaskManager.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Task</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this task?</h5>
                    
                    <div class="alert alert-warning mt-3">
                        <strong>@Model.TaskItem.Title</strong>
                        @if (!string.IsNullOrEmpty(Model.TaskItem.Description))
                        {
                            <div class="mt-2">@Model.TaskItem.Description</div>
                        }
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="TaskItem.Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-page="./Board" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

