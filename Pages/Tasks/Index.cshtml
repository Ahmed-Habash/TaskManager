@page
@model TaskManager.Pages.Tasks.IndexModel

@{
    ViewData["Title"] = "Tasks";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Tasks</h2>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Task
        </a>
    </div>

    @if (Model.Tasks != null && Model.Tasks.Count > 0)
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Folder</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>
                            <td><strong>@task.Title</strong></td>
                            <td>@(task.Description ?? "-")</td>
                            <td>
                                <span class="badge priority-@task.Priority.ToString().ToLower()">@task.Priority</span>
                            </td>
                            <td>
                                @if (task.IsCompleted)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </td>
                            <td>
                                @if (task.Folder != null)
                                {
                                    <span class="badge" style="background-color: @task.Folder.Color;">@task.Folder.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-page="./Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="bi bi-clipboard-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No tasks found</h4>
            <p class="text-muted">Create your first task to get started!</p>
            <a asp-page="./Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Add Task
            </a>
        </div>
    }
</div>
