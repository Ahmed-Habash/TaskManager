@page
@model TaskManager.Pages.Folders.DeleteModel
@{
    ViewData["Title"] = "Delete Folder";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Folder</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this folder?</h5>
                    
                    <div class="alert alert-warning mt-3">
                        <div class="d-flex align-items-center gap-2">
                            <div class="folder-color-indicator" style="background-color: @Model.Folder.Color; width: 20px; height: 20px; border-radius: 4px;"></div>
                            <strong>@Model.Folder.Name</strong>
                        </div>
                        @if (Model.Folder.Tasks != null && Model.Folder.Tasks.Count > 0)
                        {
                            <div class="mt-2">
                                <small>This folder contains @Model.Folder.Tasks.Count task(s). They will be moved out of the folder.</small>
                            </div>
                        }
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Folder.Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-page="../Tasks/Board" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

